  script(type='text/javascript').
    var alts = ['solar','wind','hydro','geo'];
    for(var i = 0; i < alts.length; i++) {
    $('.' + alts[i] + '-pic').hover(function(evt) {
    var descClass = $(evt.currentTarget).attr('class').replace('pic','desc');
    $('.default-desc').css('opacity', '0');
    $('.' + descClass).css('opacity', '1');
    }, function(evt) {
    var descClass = $(evt.currentTarget).attr('class').replace('pic','desc');
